// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int @id @default(autoincrement())

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  login       String?  @unique
  name        String?
  last_name   String?
  first_name  String?
  email       String @unique
  hash        String
  image_url   String?
  avatarUrl   String?

  @@map("users")
}